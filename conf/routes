# Tasks
GET     /api/all                        controllers.TaskController.allTasks()
POST    /api/add                        controllers.TaskController.addTask()
PUT     /api/update/:id                 controllers.TaskController.completeTask(id: reactivemongo.api.bson.BSONObjectID)
DELETE  /api/delete/:id                 controllers.TaskController.deleteTask(id: reactivemongo.api.bson.BSONObjectID)